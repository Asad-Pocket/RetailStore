@model IEnumerable<RetailStore.Models.Domain.Item>
@{
    
}

<div class="mt-2" style="width:50%">
    <div class="row">
        <h2>Item List</h2>
        <div class="col-md-4">
            <a href="/Item/AddItem" class="btn btn-success">Create Item</a>
        </div>
        <p>


        </p>
        <form mathod="Get" asp-action="DisplayItems">
            <p>
                <input type="search" placeholder="Enter Item Name....." @ViewData["DisplayItems"] name="searchString" style="width:300px;" />
                <input <a href="/Item/SearchItem" type="submit" value="Search" class="btn btn-primary" />
            </p>
        </form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        <td>
                            <a class="btn btn-success" href="/Item/EditItem?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" href="/Item/DeleteItem?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                
            </thead>

        </table>
    </div>
   
</div>
